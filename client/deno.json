{
  "name": "@laniakea/client",
  "version": "0.1.0",
  "exports": "./src/Main.mjs",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/Main.mjs",
    "serve": "deno run --allow-net --allow-read server.ts",
    "test": "deno test --allow-net test/",
    "check": "deno check src/**/*.mjs",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "bundle": "deno bundle src/Main.mjs dist/laniakea.bundle.js",
    "compile-res": "rescript build",
    "watch-res": "rescript build -w",
    "clean": "rescript clean && rm -rf dist/"
  },
  "imports": {
    "@std/": "jsr:@std/",
    "@laniakea/": "./src/"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "test": {
    "include": ["test/"]
  }
}
